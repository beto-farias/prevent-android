<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_55">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_30">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_tipo_delito"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipo delito"
                    android:textColor="@color/black"
                    android:textSize="@dimen/ps_26"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_5" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5">

                    <TextView
                        android:id="@+id/txt_fecha_delito"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="hace 5 días"
                        android:textSize="@dimen/ps_16"
                        android:paddingLeft="@dimen/dp_10"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/txt_distancia"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="700 km de ti"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/ps_14"
                        android:paddingRight="@dimen/dp_10" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/dp_60"
                android:layout_height="fill_parent"
                android:background="@color/verde"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="23"
                    android:id="@+id/txt_num_dia_delito"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ps_18"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="Nov"
                    android:id="@+id/txt_mes_delito"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ps_16"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:text="2016"
                    android:id="@+id/txt_anio_delito"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/ps_10"
                    android:layout_gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:paddingTop="@dimen/dp_2">

            <TextView
                android:id="@+id/txt_delito_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción del delito cometido, junto al mensaje del usuario con mucho mucho texto que se debe mostrar en el scroll bar"
                android:textSize="@dimen/ps_16"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_usuario_reporta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="Usuario que reporta"
                android:textSize="@dimen/ps_20"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/ColorPrimary">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/dp_10"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_victim_circled" />

            <TextView
                android:id="@+id/txt_victimas"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="3"
                android:textSize="@dimen/ps_32" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/icon_criminal_circled"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/txt_delincuentes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="4"
                android:textSize="@dimen/ps_32" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="addPointAction"
                android:src="@drawable/ico_like_on" />

            <TextView
                android:id="@+id/txt_likes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:text="3"
                android:textSize="@dimen/ps_32" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:onClick="showFotosDelitoAction"
                android:src="@drawable/p_ico_camara_med" />

            <TextView
                android:id="@+id/txt_fotos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:text="3"
                android:textSize="@dimen/ps_32" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/img_badge_delito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/p_icon_enfrentamientos_badge_med"
        android:layout_alignParentStart="false"
        android:padding="@dimen/dp_10" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="closeDetailsAction"
        android:src="@drawable/com_facebook_close"
        android:layout_gravity="top"
        android:paddingRight="@dimen/dp_10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/dp_40"
        android:visibility="gone" />
</RelativeLayout>